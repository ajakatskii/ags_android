<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_margin="0px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnFace"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:drawablePadding="-40px"
            android:text="Face"
            android:background="@color/face_bg"
            android:textColor="#fafafa"
            android:onClick="openFace"
        />

        <Button
            android:id="@+id/btnPayment"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="Payment"
            android:background="@color/payment_bg"
            android:textColor="#fafafa"
            android:onClick="openPayment"
            />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@color/settings_bg"
            android:onClick="openSettings"
            android:text="Settings"
            android:textColor="#fafafa" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>